@{
    ViewData["Title"] = "Phân quyền thư mục";
    Layout = "_SidebarLayout";
}

@{
    var folder = ViewBag.Folder as DMS.Models.Folder;
    var users = ViewBag.Users as List<DMS.Models.ApplicationUser>;
}

@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = false;
    if (currentUser != null)
    {
        var roles = await UserManager.GetRolesAsync(currentUser);
        isAdmin = roles.Contains("Admin");
    }
}

@if (isAdmin)
{
    <partial name="_AdminSidebar" />
}
else
{
    <partial name="_InstructorSidebar" />
}

<div class="main-content">
    <!-- Header -->
    <div class="content-header">
        <div class="header-title-section">
            <h1>Phân quyền thư mục: @folder?.FolderName</h1>
            <p>Cấu hình quyền truy cập cho thư mục này</p>
        </div>
        <div class="header-actions">
            <button class="notification-icon">
                <span class="material-symbols-outlined">notifications</span>
                <span class="notification-dot"></span>
            </button>
        </div>
    </div>

    <!-- Content Body -->
    <div class="content-body">
        <div class="upload-container">
            <div class="form-section">
                <h3 style="margin-bottom: 16px;">Chọn người dùng có quyền truy cập</h3>
                
                <div class="permissions-list">
                    @if (users != null)
                    {
                        @foreach (var user in users)
                        {
                            <div class="permission-item">
                                <div class="permission-user">
                                    <div class="profile-avatar-small" style="background-image: url('https://ui-avatars.com/api/?name=@user.FullName&background=16a34a&color=fff')"></div>
                                    <div>
                                        <h4>@user.FullName</h4>
                                        <p>@user.Email</p>
                                    </div>
                                </div>
                                <div class="permission-options">
                                    <label class="permission-checkbox">
                                        <input type="checkbox" name="view_@user.Id" />
                                        <span>Xem</span>
                                    </label>
                                    <label class="permission-checkbox">
                                        <input type="checkbox" name="contribute_@user.Id" />
                                        <span>Đóng góp</span>
                                    </label>
                                    <label class="permission-checkbox">
                                        <input type="checkbox" name="manage_@user.Id" />
                                        <span>Quản lý</span>
                                    </label>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("Index", "Folder")" class="btn-secondary" style="text-decoration: none;">
                    <span class="material-symbols-outlined">arrow_back</span>
                    Hủy
                </a>
                <button type="button" class="btn-primary" onclick="savePermissions()">
                    <span class="material-symbols-outlined">save</span>
                    Lưu phân quyền
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.permissions-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.permission-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background: #f9fafb;
}

.permission-user {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
}

.profile-avatar-small {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #e5e7eb;
    background-size: cover;
    background-position: center;
    flex-shrink: 0;
}

.permission-user h4 {
    font-size: 15px;
    font-weight: 600;
    color: #111418;
    margin: 0 0 4px 0;
}

.permission-user p {
    font-size: 13px;
    color: #6b7280;
    margin: 0;
}

.permission-options {
    display: flex;
    gap: 16px;
}

.permission-checkbox {
    display: flex;
    align-items: center;
    gap: 6px;
    cursor: pointer;
    font-size: 14px;
    color: #111418;
}

.permission-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
}
</style>

<script>
function savePermissions() {
    // Implement save permissions logic
    alert('Phân quyền đã được lưu!');
}
</script>

