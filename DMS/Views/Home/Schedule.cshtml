@{
    ViewData["Title"] = "Lịch biểu";
    Layout = "_DashboardLayout";
}

@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

<div class="dashboard-header">
    <div class="header-left">
        <div class="logo-icon">
            <span class="material-symbols-outlined icon-fill">school</span>
        </div>
        <h2 class="header-title">Hệ thống Học tập</h2>
    </div>
    <div class="header-nav">
        <a href="@Url.Action("StudentDashboard", "Home")" class="nav-link">Tổng quan</a>
        <a href="@Url.Action("Library", "Document")" class="nav-link">Thư viện tài liệu</a>
        <a href="@Url.Action("Search", "Document")" class="nav-link">Tìm kiếm</a>
        <a href="@Url.Action("MyCourses", "Home")" class="nav-link">Khóa học của tôi</a>
        <a href="@Url.Action("Schedule", "Home")" class="nav-link active">Lịch biểu</a>
    </div>
    <div class="header-actions">
        <button class="notification-btn">
            <span class="material-symbols-outlined">notifications</span>
            <span class="notification-badge"></span>
        </button>
        <div class="user-menu">
            <button class="avatar-btn" id="avatarBtn" style="background-image: url('https://ui-avatars.com/api/?name=@UserManager.GetUserName(User)&background=0959aa&color=fff')"></button>
            <div class="user-dropdown" id="userDropdown">
                <div class="dropdown-header">
                    <div class="dropdown-avatar" style="background-image: url('https://ui-avatars.com/api/?name=@UserManager.GetUserName(User)&background=0959aa&color=fff')"></div>
                    <div class="dropdown-user-info">
                        <div class="dropdown-name">@UserManager.GetUserName(User)</div>
                        <div class="dropdown-role">Sinh viên</div>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item logout-item">
                        <span class="material-symbols-outlined">logout</span>
                        <span>Đăng xuất</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<main class="dashboard-main">
    <div class="dashboard-title-section">
        <div>
            <h1 class="dashboard-title">Hoạt động tài liệu</h1>
            <p class="dashboard-subtitle">Xem tài liệu mới được upload theo thời gian</p>
        </div>
    </div>

    <!-- Documents Activity Timeline -->
    <div class="activity-container">
        <!-- Recent Documents -->
        <div class="recent-documents-section">
            <div class="section-header">
                <h3 style="font-size: 18px; font-weight: 600; color: #111418; margin: 0;">Tài liệu mới gần đây</h3>
                <a href="@Url.Action("Library", "Document")" class="view-all-link">
                    Xem tất cả
                    <span class="material-symbols-outlined" style="font-size: 18px;">arrow_forward</span>
                </a>
            </div>

            @if (ViewBag.RecentDocuments != null && ((List<DMS.Models.Document>)ViewBag.RecentDocuments).Any())
            {
                var recentDocuments = (List<DMS.Models.Document>)ViewBag.RecentDocuments;
                <div class="documents-timeline">
                    @foreach (var doc in recentDocuments)
                    {
                        var isToday = doc.UploadDate.Date == DateTime.Now.Date;
                        var isYesterday = doc.UploadDate.Date == DateTime.Now.AddDays(-1).Date;
                        var isThisWeek = doc.UploadDate.Date >= DateTime.Now.AddDays(-7).Date;
                        
                        string timeLabel = "";
                        if (isToday)
                            timeLabel = "Hôm nay";
                        else if (isYesterday)
                            timeLabel = "Hôm qua";
                        else if (isThisWeek)
                            timeLabel = doc.UploadDate.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"));
                        else
                            timeLabel = doc.UploadDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"));

                        var fileIcon = doc.FileName.ToLower().EndsWith(".pdf") ? "picture_as_pdf" :
                                      doc.FileName.ToLower().EndsWith(".doc") || doc.FileName.ToLower().EndsWith(".docx") ? "description" :
                                      doc.FileName.ToLower().EndsWith(".ppt") || doc.FileName.ToLower().EndsWith(".pptx") ? "slideshow" :
                                      doc.FileName.ToLower().EndsWith(".xls") || doc.FileName.ToLower().EndsWith(".xlsx") ? "table_chart" :
                                      "insert_drive_file";
                        
                        var iconColor = doc.FileName.ToLower().EndsWith(".pdf") ? "#dc2626" :
                                       doc.FileName.ToLower().EndsWith(".doc") || doc.FileName.ToLower().EndsWith(".docx") ? "#2563eb" :
                                       doc.FileName.ToLower().EndsWith(".ppt") || doc.FileName.ToLower().EndsWith(".pptx") ? "#ea580c" :
                                       doc.FileName.ToLower().EndsWith(".xls") || doc.FileName.ToLower().EndsWith(".xlsx") ? "#16a34a" :
                                       "#6b7280";

                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <div class="document-activity-card">
                                    <div class="document-icon-small" style="background-color: @(iconColor + "20");">
                                        <span class="material-symbols-outlined" style="color: @iconColor; font-size: 24px;">@fileIcon</span>
                                    </div>
                                    <div class="document-activity-info">
                                        <h4>@doc.Title</h4>
                                        <div class="document-meta">
                                            <span class="meta-item">
                                                <span class="material-symbols-outlined" style="font-size: 16px;">school</span>
                                                @(doc.Course?.CourseName ?? "N/A")
                                            </span>
                                            <span class="meta-item">
                                                <span class="material-symbols-outlined" style="font-size: 16px;">person</span>
                                                @(doc.User?.FullName ?? "N/A")
                                            </span>
                                        </div>
                                    </div>
                                    <div class="document-activity-time">
                                        <span class="time-label">@timeLabel</span>
                                        <span class="time-detail">@doc.UploadDate.ToString("HH:mm")</span>
                                    </div>
                                    <div class="document-activity-actions">
                                        <a href="@Url.Action("Preview", "Document", new { id = doc.Id })" class="action-icon-btn" title="Xem">
                                            <span class="material-symbols-outlined">visibility</span>
                                        </a>
                                        <a href="@Url.Action("Download", "Document", new { id = doc.Id })" class="action-icon-btn" title="Tải xuống">
                                            <span class="material-symbols-outlined">download</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <span class="material-symbols-outlined" style="font-size: 64px; color: #9ca3af; margin-bottom: 16px;">description</span>
                    <h3>Chưa có tài liệu nào</h3>
                    <p>Chưa có tài liệu mới được upload. Hãy quay lại sau!</p>
                </div>
            }
        </div>

        <!-- Statistics Sidebar -->
        <div class="activity-stats">
            <h3 style="font-size: 18px; font-weight: 600; color: #111418; margin-bottom: 16px;">Thống kê</h3>
            <div class="stats-card">
                <div class="stat-row">
                    <span class="stat-label">Tuần này</span>
                    <span class="stat-value">@(ViewBag.DocumentsThisWeek ?? 0)</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Tháng này</span>
                    <span class="stat-value">@(ViewBag.DocumentsThisMonth ?? 0)</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Tổng cộng</span>
                    <span class="stat-value">@(ViewBag.TotalDocuments ?? 0)</span>
                </div>
            </div>

            <!-- Documents by Course -->
            <div class="stats-by-course">
                <h4 style="font-size: 14px; font-weight: 600; color: #111418; margin: 16px 0 12px 0;">Theo khóa học</h4>
                @if (ViewBag.DocumentsByCourse != null)
                {
                    var documentsByCourse = ViewBag.DocumentsByCourse as Dictionary<string, int>;
                    @if (documentsByCourse != null && documentsByCourse.Any())
                    {
                        @foreach (var item in documentsByCourse)
                        {
                            <div class="course-stat-item">
                                <span class="course-name">@item.Key</span>
                                <span class="course-count">@item.Value</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p style="font-size: 14px; color: #9ca3af; text-align: center; padding: 16px;">Chưa có dữ liệu</p>
                    }
                }
            </div>
        </div>
    </div>
</main>

<style>
