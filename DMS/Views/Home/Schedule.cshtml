    display: inline-flex;
    align-items: center;
    gap: 4px;
    color: #0959aa;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s;
}

.view-all-link:hover {
    color: #075985;
    gap: 8px;
