    top: 48px;
    bottom: -16px;
    width: 2px;
    background: #e5e7eb;
}

.timeline-marker {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #0959aa;
    border: 3px solid white;
    box-shadow: 0 0 0 2px #0959aa;
    flex-shrink: 0;
    margin-top: 4px;
}

.timeline-content {
