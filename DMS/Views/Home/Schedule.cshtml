}

.stat-value {
    font-size: 18px;
    font-weight: 600;
    color: #0959aa;
}

.stats-by-course {
    margin-top: 24px;
}

.course-stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: #f9fafb;
