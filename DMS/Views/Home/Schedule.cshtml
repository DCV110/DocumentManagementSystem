    margin-bottom: 8px;
    transition: all 0.2s;
}

.course-stat-item:hover {
    background: #f3f4f6;
}

.course-name {
    font-size: 14px;
    color: #111418;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.course-count {
    font-size: 14px;
    font-weight: 600;
    color: #0959aa;
    background: white;
    padding: 4px 8px;
    border-radius: 4px;
}

.empty-state {
    text-align: center;
    padding: 64px 24px;
}

.empty-state h3 {
    font-size: 20px;
    font-weight: 600;
    color: #111418;
    margin: 16px 0 8px 0;
}

.empty-state p {
    font-size: 14px;
    color: #6b7280;
    margin: 0;
}

@@media (max-width: 1024px) {
    .activity-container {
        grid-template-columns: 1fr;
    }
}
</style>


