@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "_SidebarLayout";
}

@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> RoleManager

<partial name="_AdminSidebar" />

@* Hidden token for JavaScript *@
@Html.AntiForgeryToken()

<div class="main-content">
    <!-- Header -->
    <div class="content-header">
        <div class="header-title-section">
            <h1>Quản lý người dùng</h1>
            <p>Quản lý tài khoản và phân quyền người dùng</p>
        </div>
        <div class="header-actions">
            <button class="btn-primary" onclick="showCreateUserModal()" style="display: inline-flex; align-items: center; gap: 8px;">
                <span class="material-symbols-outlined">add</span>
                Tạo người dùng mới
            </button>
            <button class="notification-icon">
                <span class="material-symbols-outlined">notifications</span>
                <span class="notification-dot"></span>
            </button>
        </div>
    </div>

    <!-- Content Body -->
    <div class="content-body">
        <!-- Search and Filters -->
        <div class="search-filter-section">
            <form method="get" action="@Url.Action("UserManagement", "Admin")" style="flex: 1;">
                <div class="search-box-large">
                    <span class="material-symbols-outlined search-icon-large">search</span>
                    <input type="text" name="search" class="search-input-large" placeholder="Tìm kiếm theo tên, email..." value="@ViewBag.Search" />
                </div>
            </form>
            <div class="filter-buttons">
                <a href="@Url.Action("UserManagement", "Admin")" class="filter-btn @(ViewBag.Role == null ? "active" : "")">Tất cả</a>
                <a href="@Url.Action("UserManagement", "Admin", new { role = "Admin" })" class="filter-btn @(ViewBag.Role == "Admin" ? "active" : "")">Admin</a>
                <a href="@Url.Action("UserManagement", "Admin", new { role = "Instructor" })" class="filter-btn @(ViewBag.Role == "Instructor" ? "active" : "")">Giảng viên</a>
                <a href="@Url.Action("UserManagement", "Admin", new { role = "Student" })" class="filter-btn @(ViewBag.Role == "Student" ? "active" : "")">Sinh viên</a>
            </div>
        </div>

        <!-- Users Table -->
        <div class="documents-table-container">
            <table class="documents-table-modern">
                <thead>
                    <tr>
                        <th>Người dùng</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Users != null)
                    {
                        var users = ViewBag.Users as List<dynamic>;
                        @if (users != null)
                        {
                            @foreach (var item in users)
                            {
                                var user = item?.User as DMS.Models.ApplicationUser;
                                var roles = item?.Roles as IList<string>;
                                @if (user != null)
                                {
                                    var isLocked = user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow;
                                    
                                    <tr>
                                        <td>
                                            <div class="document-item">
                                                <div class="profile-avatar-small" style="background-image: url('https://ui-avatars.com/api/?name=@user.FullName&background=16a34a&color=fff')"></div>
                                                <div class="document-item-info">
                                                    <h5>@user.FullName</h5>
                                                    <p>@(user.StudentCode ?? user.Faculty ?? "")</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td style="color: #6b7280;">@(user.Email ?? "")</td>
                                        <td>
                                            <select class="role-select" onchange="changeRole('@user.Id', this.value)">
                                                <option value="">-- Chọn vai trò --</option>
                                                @if (ViewBag.Roles != null)
                                                {
                                                    var roleList = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
                                                    @if (roleList != null)
                                                    {
                                                        @foreach (var role in roleList)
                                                        {
                                                            @if (role != null && role.Name != null)
                                                            {
                                                                <option value="@role.Name" selected="@(roles != null && role.Name != null && roles.Contains(role.Name))">@role.Name</option>
                                                            }
                                                        }
                                                    }
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            @if (isLocked)
                                            {
                                                <span class="status-badge-modern red">
                                                    <span class="status-dot-modern red"></span>
                                                    Đã khóa
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge-modern green">
                                                    <span class="status-dot-modern green"></span>
                                                    Hoạt động
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <div class="approval-actions">
                                                <form method="post" action="@Url.Action("ToggleLock", "Admin")" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="action-btn-small" title="@(isLocked ? "Mở khóa" : "Khóa")">
                                                        <span class="material-symbols-outlined">@(isLocked ? "lock_open" : "lock")</span>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div id="createUserModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Tạo người dùng mới</h3>
            <button type="button" class="modal-close" onclick="closeCreateUserModal()">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>
        <form method="post" action="@Url.Action("CreateUser", "Admin")" id="createUserForm">
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-group">
                    <label class="form-label">Email <span class="required">*</span></label>
                    <input type="email" name="email" class="form-input" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Mật khẩu <span class="required">*</span></label>
                    <input type="password" name="password" class="form-input" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Họ tên <span class="required">*</span></label>
                    <input type="text" name="fullName" class="form-input" required />
                </div>
                <div class="form-group">
                    <label class="form-label">Vai trò <span class="required">*</span></label>
                    <select name="role" class="form-select" required>
                        <option value="">-- Chọn vai trò --</option>
                        @if (ViewBag.Roles != null)
                        {
                            var roleList = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
                            @if (roleList != null)
                            {
                                @foreach (var role in roleList)
                                {
                                    @if (role != null && role.Name != null)
                                    {
                                        <option value="@role.Name">@role.Name</option>
                                    }
                                }
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Mã sinh viên</label>
                    <input type="text" name="studentCode" class="form-input" />
                </div>
                <div class="form-group">
                    <label class="form-label">Khoa</label>
                    <input type="text" name="faculty" class="form-input" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="closeCreateUserModal()">Hủy</button>
                <button type="submit" class="btn-primary">Tạo người dùng</button>
            </div>
        </form>
    </div>
</div>

<style>
.role-select {
    padding: 6px 12px;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 14px;
    background: white;
    cursor: pointer;
}

.status-badge-modern.red {
    background: #fef2f2;
    color: #dc2626;
}

.status-dot-modern.red {
    background: #dc2626;
}
</style>

<script>
function showCreateUserModal() {
    document.getElementById('createUserModal').style.display = 'flex';
}

function closeCreateUserModal() {
    document.getElementById('createUserModal').style.display = 'none';
    document.getElementById('createUserForm').reset();
}

function changeRole(userId, role) {
    if (confirm('Bạn có chắc muốn thay đổi vai trò của người dùng này?')) {
        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("AssignRole", "Admin")';
        
        // Lấy AntiForgeryToken từ form có sẵn hoặc tạo mới
        var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        if (tokenInput) {
            var token = document.createElement('input');
            token.type = 'hidden';
            token.name = '__RequestVerificationToken';
            token.value = tokenInput.value;
            form.appendChild(token);
        }
        
        var userIdInput = document.createElement('input');
        userIdInput.type = 'hidden';
        userIdInput.name = 'userId';
        userIdInput.value = userId;
        form.appendChild(userIdInput);
        
        var roleInput = document.createElement('input');
        roleInput.type = 'hidden';
        roleInput.name = 'role';
        roleInput.value = role;
        form.appendChild(roleInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}

document.getElementById('createUserModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeCreateUserModal();
    }
});
</script>

