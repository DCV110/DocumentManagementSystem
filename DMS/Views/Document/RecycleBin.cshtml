@{
    ViewData["Title"] = "Thùng rác - Teaching Staff Studio";
    Layout = "_SidebarLayout";
}

@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = false;
    if (currentUser != null)
    {
        var roles = await UserManager.GetRolesAsync(currentUser);
        isAdmin = roles.Contains("Admin");
    }
}

@if (isAdmin)
{
    <partial name="_AdminSidebar" />
}
else
{
    <partial name="_InstructorSidebar" />
}

<div class="main-content">
    <!-- Header -->
    <div class="content-header">
        <div class="header-title-section">
            <h1>Thùng rác</h1>
            <p>Các tài liệu và thư mục đã xóa. Bạn có thể khôi phục hoặc xóa vĩnh viễn.</p>
        </div>
    </div>

    <!-- Content Body -->
    <div class="content-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="background: #dcfce7; color: #16a34a; padding: 12px 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid #86efac;">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" style="background: #fee2e2; color: #dc2626; padding: 12px 16px; border-radius: 8px; margin-bottom: 24px; border: 1px solid #fca5a5;">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Folders Table -->
        @if (ViewBag.DeletedFolders != null && ((List<DMS.Models.Folder>)ViewBag.DeletedFolders).Any())
        {
            <div class="documents-table-container" style="margin-bottom: 32px;">
                <h2 style="font-size: 18px; font-weight: 600; color: #111418; margin-bottom: 16px;">Thư mục đã xóa</h2>
                <table class="documents-table-modern">
                    <thead>
                        <tr>
                            <th>Tên thư mục</th>
                            <th>Khóa học</th>
                            <th>Số tài liệu</th>
                            <th>Ngày xóa</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var folder in (List<DMS.Models.Folder>)ViewBag.DeletedFolders)
                        {
                            <tr>
                                <td>
                                    <div class="document-item">
                                        <div class="document-item-icon" style="background: #fef3c7; color: #f59e0b;">
                                            <span class="material-symbols-outlined">folder</span>
                                        </div>
                                        <div class="document-item-info">
                                            <h5>@folder.FolderName</h5>
                                            <p>@(folder.Course?.CourseName ?? "Thư mục cá nhân")</p>
                                        </div>
                                    </div>
                                </td>
                                <td style="color: #6b7280;">
                                    @(folder.Course?.CourseName ?? "-")
                                </td>
                                <td style="color: #111418; font-weight: 500;">
                                    @(folder.Documents?.Count ?? 0) mục
                                </td>
                                <td style="color: #6b7280;">
                                    @if (folder.DeletedDate.HasValue)
                                    {
                                        @folder.DeletedDate.Value.ToString("dd MMM, yyyy HH:mm", new System.Globalization.CultureInfo("vi-VN"))
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    <div style="display: flex; gap: 8px; align-items: center;">
                                        <form method="post" action="@Url.Action("Restore", "Folder", new { id = folder.Id })" style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn khôi phục thư mục này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-menu-btn" title="Khôi phục" style="border: none; background: none; cursor: pointer; padding: 0; color: #16a34a;">
                                                <span class="material-symbols-outlined">restore</span>
                                            </button>
                                        </form>
                                        <form method="post" action="@Url.Action("DeletePermanently", "Folder", new { id = folder.Id })" style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn xóa vĩnh viễn thư mục này? Hành động này không thể hoàn tác.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-menu-btn" title="Xóa vĩnh viễn" style="border: none; background: none; cursor: pointer; padding: 0; color: #dc2626;">
                                                <span class="material-symbols-outlined">delete_forever</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Documents Table -->
        <div class="documents-table-container">
            @if (ViewBag.DeletedDocuments != null && ((List<DMS.Models.Document>)ViewBag.DeletedDocuments).Any())
            {
                <h2 style="font-size: 18px; font-weight: 600; color: #111418; margin-bottom: 16px;">Tài liệu đã xóa</h2>
                <table class="documents-table-modern">
                    <thead>
                        <tr>
                            <th>Tên tài liệu</th>
                            <th>Ngày xóa</th>
                            <th>Kích thước</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in (List<DMS.Models.Document>)ViewBag.DeletedDocuments)
                        {
                            var fileExtension = doc.FileName?.Split('.').LastOrDefault()?.ToLower() ?? "";
                            var fileIcon = "insert_drive_file";
                            var iconColor = "blue";
                            
                            if (fileExtension == "pdf") { fileIcon = "picture_as_pdf"; iconColor = "red"; }
                            else if (fileExtension == "doc" || fileExtension == "docx") { fileIcon = "description"; iconColor = "blue"; }
                            else if (fileExtension == "ppt" || fileExtension == "pptx") { fileIcon = "slideshow"; iconColor = "purple"; }
                            else if (fileExtension == "xls" || fileExtension == "xlsx") { fileIcon = "table_chart"; iconColor = "green"; }

                            var fileSizeMB = (doc.FileSize / 1024.0 / 1024.0).ToString("F2");

                            <tr>
                                <td>
                                    <div class="document-item">
                                        <div class="document-item-icon @iconColor">
                                            <span class="material-symbols-outlined">@fileIcon</span>
                                        </div>
                                        <div class="document-item-info">
                                            <h5>@doc.Title</h5>
                                            <p>@(doc.Description ?? doc.Course?.CourseName ?? "")</p>
                                        </div>
                                    </div>
                                </td>
                                <td style="color: #6b7280;">
                                    @if (doc.DeletedDate.HasValue)
                                    {
                                        @doc.DeletedDate.Value.ToString("dd MMM, yyyy HH:mm", new System.Globalization.CultureInfo("vi-VN"))
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td style="color: #111418; font-weight: 500;">@fileSizeMB MB</td>
                                <td>
                                    <div style="display: flex; gap: 8px; align-items: center;">
                                        <form method="post" action="@Url.Action("Restore", "Document", new { id = doc.Id })" style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn khôi phục tài liệu này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-menu-btn" title="Khôi phục" style="border: none; background: none; cursor: pointer; padding: 0; color: #16a34a;">
                                                <span class="material-symbols-outlined">restore</span>
                                            </button>
                                        </form>
                                        <form method="post" action="@Url.Action("DeletePermanently", "Document", new { id = doc.Id })" style="display: inline;" onsubmit="return confirm('Bạn có chắc muốn xóa vĩnh viễn tài liệu này? Hành động này không thể hoàn tác.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="action-menu-btn" title="Xóa vĩnh viễn" style="border: none; background: none; cursor: pointer; padding: 0; color: #dc2626;">
                                                <span class="material-symbols-outlined">delete_forever</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else if (ViewBag.DeletedFolders == null || !((List<DMS.Models.Folder>)ViewBag.DeletedFolders).Any())
            {
                <div style="text-align: center; padding: 64px 32px; color: #6b7280;">
                    <span class="material-symbols-outlined" style="font-size: 64px; color: #d1d5db; margin-bottom: 16px; display: block;">delete_outline</span>
                    <h3 style="color: #111418; margin-bottom: 8px;">Thùng rác trống</h3>
                    <p>Không có tài liệu hoặc thư mục nào trong thùng rác</p>
                </div>
            }
        </div>
    </div>
</div>

