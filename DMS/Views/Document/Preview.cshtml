@{
    var document = ViewBag.Document as DMS.Models.Document;
    var zipContents = ViewBag.ZipContents as List<DMS.ViewModels.ZipEntryInfo>;
}

@using Microsoft.AspNetCore.Identity
@using System.IO
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Xem tài liệu";
    var currentUser = await UserManager.GetUserAsync(User);
    var isAdmin = false;
    var isStudent = false;
    if (currentUser != null)
    {
        var roles = await UserManager.GetRolesAsync(currentUser);
        isAdmin = roles.Contains("Admin");
        isStudent = roles.Contains("Student");
    }
    
    // Sử dụng cùng layout cho tất cả roles để giao diện giống nhau
    Layout = "_SidebarLayout";
}

@if (isAdmin)
{
    <partial name="_AdminSidebar" />
}
else if (isStudent)
{
    <partial name="_StudentSidebar" />
}
else
{
    <partial name="_InstructorSidebar" />
}

<div class="main-content">
    <!-- Header -->
    <div class="content-header">
        <div class="header-title-section">
            <h1>@document?.Title</h1>
            <p>@document?.Course?.CourseName • @document?.UploadDate.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Download", "Document", new { id = document?.Id })" class="btn-primary" style="text-decoration: none;">
                <span class="material-symbols-outlined">download</span>
                Tải xuống
            </a>
            <button class="notification-icon">
                <span class="material-symbols-outlined">notifications</span>
                <span class="notification-dot"></span>
            </button>
        </div>
    </div>

    <!-- Content Body -->
    <div class="content-body">
        <div class="preview-container">
            @if (document?.ContentType.Contains("pdf") == true)
            {
                <iframe src="@document.FilePath" class="preview-iframe" frameborder="0"></iframe>
            }
            else if (document?.ContentType.Contains("image") == true)
            {
                <img src="@document.FilePath" alt="@document.Title" class="preview-image" />
            }
            else if (zipContents != null)
            {
                <!-- ZIP File Contents Preview -->
                <div class="zip-preview-container" style="width: 100%; padding: 24px; background: white; border-radius: 12px;">
                    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 24px;">
                        <span class="material-symbols-outlined" style="font-size: 32px; color: #f97316;">folder_zip</span>
                        <div>
                            <h3 style="margin: 0; font-size: 20px; font-weight: 600; color: #111418;">Nội dung file ZIP</h3>
                            <p style="margin: 4px 0 0 0; font-size: 14px; color: #6b7280;">@zipContents.Count mục (@zipContents.Count(e => !e.IsDirectory)) file, @zipContents.Count(e => e.IsDirectory) thư mục</p>
                        </div>
                    </div>
                    
                    <div class="zip-contents-list" style="max-height: 600px; overflow-y: auto; border: 1px solid #e5e7eb; border-radius: 8px;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <thead style="background: #f9fafb; position: sticky; top: 0;">
                                <tr>
                                    <th style="padding: 12px 16px; text-align: left; font-size: 12px; font-weight: 600; color: #6b7280; text-transform: uppercase; border-bottom: 1px solid #e5e7eb;">Tên</th>
                                    <th style="padding: 12px 16px; text-align: right; font-size: 12px; font-weight: 600; color: #6b7280; text-transform: uppercase; border-bottom: 1px solid #e5e7eb;">Kích thước</th>
                                    <th style="padding: 12px 16px; text-align: left; font-size: 12px; font-weight: 600; color: #6b7280; text-transform: uppercase; border-bottom: 1px solid #e5e7eb;">Ngày sửa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in zipContents.OrderBy(e => e.IsDirectory ? 0 : 1).ThenBy(e => e.FullPath))
                                {
                                    <tr style="border-bottom: 1px solid #f3f4f6;">
                                        <td style="padding: 12px 16px;">
                                            <div style="display: flex; align-items: center; gap: 8px;">
                                                @if (entry.IsDirectory)
                                                {
                                                    <span class="material-symbols-outlined" style="font-size: 20px; color: #fbbf24;">folder</span>
                                                    <span style="font-weight: 500; color: #111418;">@entry.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="material-symbols-outlined" style="font-size: 20px; color: #6b7280;">description</span>
                                                    <span style="color: #111418;">@entry.Name</span>
                                                }
                                            </div>
                                        </td>
                                        <td style="padding: 12px 16px; text-align: right; color: #6b7280; font-size: 14px;">
                                            @if (!entry.IsDirectory && entry.Size.HasValue)
                                            {
                                                @FormatFileSize(entry.Size.Value)
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td style="padding: 12px 16px; color: #6b7280; font-size: 14px;">
                                            @if (entry.LastModified.HasValue)
                                            {
                                                @entry.LastModified.Value.ToString("dd/MM/yyyy HH:mm")
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <div style="margin-top: 16px; text-align: center;">
                        <a href="@Url.Action("Download", "Document", new { id = document?.Id })" class="btn-primary" style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                            <span class="material-symbols-outlined">download</span>
                            Tải xuống file ZIP
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="preview-unsupported">
                    <span class="material-symbols-outlined" style="font-size: 64px; color: #9ca3af; margin-bottom: 16px;">description</span>
                    <h3>Không thể xem trực tuyến</h3>
                    <p>File này không hỗ trợ xem trực tuyến. Vui lòng tải xuống để xem.</p>
                    <a href="@Url.Action("Download", "Document", new { id = document?.Id })" class="btn-primary" style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px; margin-top: 16px;">
                        <span class="material-symbols-outlined">download</span>
                        Tải xuống
                    </a>
                </div>
            }
        </div>

        <!-- Document Info Sidebar -->
        <div class="preview-sidebar">
            <div class="info-card">
                <h3>Thông tin tài liệu</h3>
                <div class="info-item">
                    <span class="info-label">Tác giả:</span>
                    <span class="info-value">@document?.User?.FullName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Môn học:</span>
                    <span class="info-value">@document?.Course?.CourseName</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Ngày đăng:</span>
                    <span class="info-value">@document?.UploadDate.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Kích thước:</span>
                    <span class="info-value">@(document != null ? FormatFileSize(document.FileSize) : "")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Định dạng:</span>
                    <span class="info-value">@(document != null ? FormatContentType(document.ContentType, document.FileName) : "")</span>
                </div>
                @if (isStudent || (document != null && (document.IsPublicShared || document.CourseId != null)))
                {
                    <div class="info-item">
                        <span class="info-label">Lượt xem:</span>
                        <span class="info-value">@(document?.ViewCount ?? 0)</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Lượt tải:</span>
                        <span class="info-value">@(document?.DownloadCount ?? 0)</span>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(document?.Description))
            {
                <div class="info-card">
                    <h3>Mô tả</h3>
                    <p>@document.Description</p>
                </div>
            }

            <div class="info-card">
                <h3>Hành động</h3>
                <div class="action-buttons-vertical">
                    <a href="@Url.Action("Download", "Document", new { id = document?.Id })" class="action-btn-full">
                        <span class="material-symbols-outlined">download</span>
                        Tải xuống
                    </a>
                    <button class="action-btn-full">
                        <span class="material-symbols-outlined">favorite_border</span>
                        Đánh dấu yêu thích
                    </button>
                    <button class="action-btn-full">
                        <span class="material-symbols-outlined">share</span>
                        Chia sẻ
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string FormatFileSize(long bytes)
    {
        string[] sizes = { "Bytes", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    string FormatContentType(string contentType, string fileName)
    {
        if (string.IsNullOrEmpty(contentType) && !string.IsNullOrEmpty(fileName))
        {
            // Fallback to file extension if ContentType is empty
            var ext = System.IO.Path.GetExtension(fileName)?.ToUpper().TrimStart('.');
            return ext ?? "FILE";
        }

        if (string.IsNullOrEmpty(contentType))
            return "FILE";

        // Convert MIME type to short format
        contentType = contentType.ToLower();

        if (contentType.Contains("pdf"))
            return "PDF";
        else if (contentType.Contains("wordprocessingml") || contentType.Contains("msword"))
            return "DOCX";
        else if (contentType.Contains("spreadsheetml") || contentType.Contains("excel"))
            return "XLSX";
        else if (contentType.Contains("presentationml") || contentType.Contains("powerpoint"))
            return "PPTX";
        else if (contentType.Contains("text/plain"))
            return "TXT";
        else if (contentType.Contains("text/html"))
            return "HTML";
        else if (contentType.Contains("image/jpeg") || contentType.Contains("image/jpg"))
            return "JPG";
        else if (contentType.Contains("image/png"))
            return "PNG";
        else if (contentType.Contains("image/gif"))
            return "GIF";
        else if (contentType.Contains("zip"))
            return "ZIP";
        else if (contentType.Contains("rar"))
            return "RAR";
        else if (contentType.Contains("image"))
            return "IMAGE";
        else if (contentType.Contains("text"))
            return "TEXT";
        else
        {
            // Try to extract from file extension as fallback
            if (!string.IsNullOrEmpty(fileName))
            {
                var ext = System.IO.Path.GetExtension(fileName)?.ToUpper().TrimStart('.');
                if (!string.IsNullOrEmpty(ext))
                    return ext;
            }
            return "FILE";
        }
    }
}

